// REMOVES THE REVIEW FORM TITLE AND CHANGES THE HTML AND CSS
$('#edit-review-link').empty().removeAttr('id').attr('id', 'add-review-link').html('<%= link_to new_user_doctor_review_path(user_id: current_user.id, doctor_id: @id), remote: true, class: "btn btn-primary" do %><%= image_tag("plus-2-32.png", size: "14") %><span>&nbsp;Add Review</span><% end %>');

$('#add-review-link').empty().html('<%= link_to new_user_doctor_review_path(user_id: current_user.id, doctor_id: @id), remote: true, class: "btn btn-primary" do %><%= image_tag("plus-2-32.png", size: "14") %><span>&nbsp;Add Review</span><% end %>');

// CHANGES THE AVERAGE REVIEW HTML WHEN THE REVIEW IS SUBMITTED
$('#rating-average-div-<%= @review.doctor.id %>').empty().html('<% if @review.doctor.reviews.average(:rating).to_f > 0 %><div class="rating-average"><%= @review.doctor.reviews.average(:rating).to_f.round(1) %></div><% end %>');
