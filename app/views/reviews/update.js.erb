
// ADDS THE UPDATED REVIEW TO THE TOP OF THE ALL-REVIEWS COLUMN ON SUBMIT
$('.review-<%= @review.id %>').empty().html('<p class="rating-title">Rating:<span class="rating-number"><%= @review.rating %></span></p><p class="review-info"><%= @review.user.username %> from <%= @review.user.city %>, <%= @review.user.state %>, says:</p><p class="review-text"><%= @review.body %></p><p class="review-date">Reviewed on <%= @review.date_published %></p><% if current_user %><% if current_user.reviews.find_by(doctor_id: @id) %><%= link_to user_doctor_review_path(user_id: current_user.id, doctor_id: @id, id: @review.id), method: :delete, remote: true, class: "review-delete-button" do %><%= image_tag("trash-9-32.png", size: "18") %><% end %><% end %><% end %>');

// SLIDES UP THE REVIEW FORM WHEN THE REVIEW IS SUBMITTED
$('#review-<%= @review.doctor_id %>').slideUp(400, function() {
  $(this).empty();
});

// REMOVES THE REVIEW FORM TITLE AND CHANGES THE HTML AND CSS
$('#edit-review-link').empty().html('Thank you for your updated review!').css('color', 'rgb(49, 101, 171)');

// CHANGES THE AVERAGE REVIEW HTML WHEN THE REVIEW IS SUBMITTED
$('#rating-average-div-<%= @review.doctor.id %>').html('<% if @review.doctor.reviews.average(:rating).to_f > 0 %><div class="rating-average"><%= @review.doctor.reviews.average(:rating).to_f.round(1) %></div><% end %>');

