<!-- POPULATES BUSINESS CARD DOCTOR 'BUTTONS' -->
<%= button_to doctor_reviews_path(doctor_id: doctor.id), class: "surgeon", method: :get, 'ng-click': 'showReviews=true', remote: true do %>
  <p class="surgeon-name"><%= doctor.name %></p>
  <% if doctor.group %>
    <p class="surgeon-group"><%= doctor.group %></p>
  <% end %>
    <p class="surgeon-info"><%= doctor.address %><br>
    <%= doctor.city %> <%= doctor.zip %><br>
    <%= doctor.phone %><br>
    <%= link_to doctor.web, "http://#{doctor.web}", target: "_blank" %></p>
    
<!--     AVERAGES AND ROUNDS THE REVIEWS FOR AN AVERAGE RATING -->
  <div class="rating-average">
  <div id="rating-average-div-<%= doctor.id %>">
    <% if doctor.reviews.average(:rating).to_f > 0 %>

      <%= doctor.reviews.average(:rating).to_f.round(1) %>

    <% end %>
  </div>
  </div>
<% end %>

